<!-- news-list-Modal -->
<div class="modal fade" id="news-list-Modal">
	<div class="modal-dialog"><div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Delete a news</h4>
        </div>
        <div class="modal-body">
            <form id="deleteNewsForm" action="/admin/deleteNews" method="post">
            <% for (var i = 0; i < news.length; i++) { %>
                <label>
                <input type="radio" name="radios" value="<%= news[i]._id %>">
                <!-- <label for="radio1"></label> -->
                <%= news[i].title %>
                </label>
                <br>
            <% } %>
            </form>
        </div>
        <div class="modal-footer">
            <button type="submit" form="deleteNewsForm" class="btn btn-danger">Delete</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
        </div><!-- /.modal-content --></div><!-- /.modal-dialog -->
</div><!-- /.modal -->