<!-- create-class-Modal -->
<div class="modal fade" id="create-class-Modal">
	<div class="modal-dialog"><div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Create new class</h4>
        </div>
        <div class="modal-body">
            <form id='createClass' action="/admin/createClass" method="POST">
                <div class="form-group">
                    <label>網址英文(ex:nstu.edu.tw/xxx/)</label>
                    <input type="text" name="_id" class="form-control" placeholder="ex:introduction">
                </div>
                <div class="form-group">
                    <label>中文名稱</label>
                    <input type="text" name="title" class="form-control" placeholder="ex:系所簡介">
                </div>
            </form>	
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button id="createClassBtn" form="createClass" type="submit" class="btn btn-primary">Create</button>
        </div>
        </div><!-- /.modal-content --></div><!-- /.modal-dialog -->
</div><!-- /.modal -->