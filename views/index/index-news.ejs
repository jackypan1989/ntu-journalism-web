<table id="index-news-table" class="table">
  <tbody>
    <tr>
      <td><img src="img/image06.png"></img>
          <% if(locale==='zh-tw') { %>
          <span class="title">最新消息</span>
          <% } else { %>
          <span class="title">News</span>
          <% } %>
      </td>
    </tr>
    <% var length = (news.length > 3) ? 3 : news.length; %>
    <% for (var i=0 ; i< length; i++) { %>
    <tr>
      <td><a data-toggle="modal" href="#news-content-Modal" data-id="<%= news[i]._id %>"><%= news[i].title %></a></td>
    </tr>
    <% } %>
    <tr>
      <td><span class="read-more"><a href="/news?type=news">Read More</a></span></td>
    </tr>
  </tbody>
</table>
<% include ../news/modal-news-content %>